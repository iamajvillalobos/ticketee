<header>
  <h1><%= @project.name %></h1>
  <ul class="actions">
    <li><%= link_to "Edit Project", edit_project_path, class: "edit" %></li>
    <li>
      <%= link_to "Delete Project",
      project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this Project?" },
      class: "delete" %>
    </li>
  </ul>
</header>
<p><%= @project.description %></p>

